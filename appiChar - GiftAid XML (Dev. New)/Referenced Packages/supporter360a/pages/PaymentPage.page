                                            </apex:pageBlockSectionItem>
                                            <apex:pageBlockSectionItem >
                                                <apex:outputLabel value="Country" />
                                                <apex:inputField required="true" value="{!contact.AddressPrimaryCountry__c}" style="width: 300px;" />
                                            </apex:pageBlockSectionItem>
                                            <apex:pageBlockSectionItem >
